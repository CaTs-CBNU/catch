<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 카드뷰 배경색을 설정 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- 카드뷰 내부 배경색 -->
            <corners android:radius="8dp" /> <!-- 모서리 둥글기 설정 -->
        </shape>
    </item>

    <!-- 외곽선(검은색)을 설정 -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/black"/> <!-- 외곽선 색상 및 두께 설정 -->
            <corners android:radius="8dp" /> <!-- 외곽선의 모서리 둥글기 설정 -->
        </shape>
    </item>
</layer-list>