<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/hint_text_color"
    tools:context=".gallery.fragments.GalleryPdfGeneratorFragment">

    <!-- Wrapper for CardView with a flexible height -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@id/thumbnailRecyclerView"
        android:gravity="center_horizontal"
        android:background="@color/white">

        <!-- CardView for the framed effect -->
        <androidx.cardview.widget.CardView
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:background="#FFFFFF">

            <!-- ScrollView with maxHeight for dynamic content -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="400dp"> <!-- Set max height to 400dp -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@color/white">

                    <!-- Date and Time Text -->
                    <TextView
                        android:id="@+id/date_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2024년 9월 25일 수요일 1:18 PM"
                        android:textColor="@color/black"
                        android:fontFamily="@font/crr"
                        android:textSize="14sp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                    <!-- Title Text -->
                    <TextView
                        android:id="@+id/title_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="후끈합니다"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/crr"
                        android:layout_below="@id/date_time_text"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp" />

                    <!-- Story Image with padding for "frame" effect -->
                    <ImageView
                        android:id="@+id/story_image"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@id/title_text"
                        android:layout_marginTop="8dp"
                        android:padding="8dp"
                        android:background="#EFEFEF"
                        android:scaleType="centerCrop"
                        android:src="@drawable/background" />

                    <!-- Story Description Text -->
                    <TextView
                        android:id="@+id/story_description_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/story_image"
                        android:layout_marginTop="8dp"
                        android:text="후끈한 피자ㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋ후횽"
                        android:textColor="@color/black"
                        android:fontFamily="@font/crr"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- RecyclerView for thumbnails at the bottom -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/thumbnailRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:overScrollMode="never" />

    <!-- FloatingActionButton for PDF generation -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/generate_pdf_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_picture_as_pdf_24"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="1dp"
        android:backgroundTint="#F96E6D"
        android:layout_centerHorizontal="true"
        android:contentDescription="Generate PDF"/>
</RelativeLayout>
