<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".story.fragments.StoryPreviewFragment">

    <!-- Main layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이야기 미리 보기"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/crbb"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Loading spinner for generating the story -->
        <ProgressBar
            android:id="@+id/pb_loading"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/cat_ch"
            android:visibility="gone" />

        <!-- Story preview (with image and text inside CardView) -->
        <ScrollView
            android:id="@+id/sv_story_preview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:paddingTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Story text inside CardView -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="@color/black"
                    android:backgroundTint="@color/white"
                    >
                    <com.nitish.typewriterview.TypeWriterView
                        android:id="@+id/tv_story_preview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Your story will be displayed here..."
                        android:fontFamily="@font/crr"
                        android:textSize="12sp"
                        android:padding="4dp" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </ScrollView>
        <!-- Button to generate the story -->
        <Button
            android:id="@+id/btn_generate_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이야기 생성하기"
            android:backgroundTint="#FFD653"
            android:textColor="@color/black"
            android:fontFamily="@font/crr"
            android:layout_gravity="center" />



        <!-- Next button positioned at the bottom -->
        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음"
            android:backgroundTint="#FFD653"
            android:textColor="@color/black"
            android:fontFamily="@font/crr"
            android:layout_gravity="center" />
    </LinearLayout>
</FrameLayout>
